
@foreach (var item in @Model.Tasks)
{
    <form  asp-action="UpdateTask" asp-controller="Home" asp-route-id = "@item.Id">
    <tr>
    <th scope="row" >@item.Id</th>
     <td><input class="border-0" value="@item.Text" name="newTaskText"/></td>
     <td><input class="border-0" value="@item.Status" name="newTaskStatus" /></td>
    <td>
            <a class="btn btn-danger" 
                asp-action="Delete"
                asp-controller="Home"
                asp-route-id="@item.Id">Delete</a>

        <input  class="btn btn-warning ms-1" type="submit" value="Update"/>
    </td>
    </tr>
</form>
}